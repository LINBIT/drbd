    </cmdsynopsis>
    <cmdsynopsis>
      <command>drbdsetup</command>
      <arg choice=req><replaceable>dispositivo</replaceable></arg>
      <arg choice=req>secondary_remote</arg>
    </cmdsynopsis>
    <cmdsynopsis>
      <command>drbdsetup</command>
      <arg choice=req><replaceable>dispositivo</replaceable></arg>
