%bcond_without utils
%bcond_with km
%bcond_without xen
%bcond_without udev
%bcond_without pacemaker
%bcond_with rgmanager
%bcond_without heartbeat
%bcond_without bashcompletion

Name: @PACKAGE_TARNAME@
Summary: DRBD driver for Linux
Version: @PACKAGE_VERSION@
Release: 5@RPM_DIST_TAG@
Source: http://oss.linbit.com/%{name}/8.3/%{name}-%{version}.tar.gz
Vendor: DRBD
License: GPLv2+
ExclusiveOS: linux
Group: System Environment/Kernel
URL: http://www.drbd.org/
BuildRoot: %(mktemp -ud %{_tmppath}/%{name}-%{version}-%{release}-XXXXXX)
%if %{with utils}
BuildRequires: flex, gcc
%endif
%if %{with km}
BuildRequires: gcc, @RPM_BUILDREQ_KM@
%endif
%if %{with udev}
BuildRequires: udev
%endif
Requires: %{name}-utils = %{version}
%if %{with xen}
Requires: %{name}-xen = %{version}
%endif
%if %{with pacemaker}
Requires: %{name}-pacemaker = %{version}
%endif
%if %{with rgmanager}
